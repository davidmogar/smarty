div.navbar.navbar-default.navbar-fixed-top(role='navigation')
  div.container
    div.navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href="#") Smarty
    div.collapse.navbar-collapse
      if user
        ul.nav.navbar-nav
          li
            a(href="/") #{__('home')}
          li
            a(href="/users/profile") #{__('profile')}
          li
            a(href="/questions") #{__('questions')}

        ul.nav.navbar-nav.navbar-right
          li
            a(href="?lang=en") #{__('english')}
          li
            a(href="?lang=es") #{__('spanish')}
          li
            a(href="#") #{__('signed_as')} #{user.local.email}
          li
            a(href='/logout')
              span.glyphicon.glyphicon-log-out
      else
        ul.nav.navbar-nav.navbar-right
          li
            a(href="/login") #{__('login')}
          li
            a(href='/signup') #{__('signup')}
